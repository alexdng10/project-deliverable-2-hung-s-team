    <modelVersion>4.0.0</modelVersion>

    <!-- Project metadata -->
    <groupId>com.example</groupId>
    <artifactId>restaurant-reservation</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <!-- Maven and Java versions -->
    <properties>
